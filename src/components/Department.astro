---
const Img = Astro.props.Img;
const Header = Astro.props.Header;
const Description = Astro.props.Description;
const Link = Astro.props.Link;
---

<div>
  <a href={Link}>
    <div class="grid">
      <img src={Img} alt="" />
      <h2 class="white">{Header}</h2>
      <p>
        {Description}
      </p>
    </div>
  </a>
</div>

<style>
  .grid {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr 1fr;
  }
  div {
    background-color: #ffffff;
    margin: 20px;
    overflow: hidden;
    border-radius: 20px;
  }
  img {
    aspect-ratio: 35/20;
    object-fit: cover;
    grid-column: 1/2;
    grid-row: 1/3;
  }

  a {
    text-decoration: none;
    height: 100%;
  }

  p {
    color: var(--blue);
  }

  h2 {
    grid-column: 1/3;
    grid-row: 1/3;
    place-self: center;
  }

  @media (min-width: 801px) {
    img {
      aspect-ratio: 3/4;
    }
    p {
      grid-column: 1/2;
      grid-row: 1/3;
      color: var(--blue);
      font-size: 14px;
      line-height: 30px;
      display: none;
      padding: 20px;
      color: var(--white);
      height: 100%;
    }

    a:hover p {
      display: block;
      background-color: rgba(0, 59, 92, 0.75);
    }
    a:hover h2 {
      display: none;
    }
    a:hover img {
    }
  }
</style>
