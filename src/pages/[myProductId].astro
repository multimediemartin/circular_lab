// const { id } = Astro.params;
const { myProduct } = Astro.props;


---

<Layout Title={myProduct.event_title}>
  <section>
      <Button Link="events.html" Text=" ← back to list" Type="two" />
    <h1>{myProduct.event_title}</h1>
    <div class="grid_2-1">
      <h2>{myProduct.event_date}, {myProduct.event_start}-{myProduct.event_end}</h2>
      <h2>{myProduct.event_place}</h2>
      <div class="right">
        <img src="/map.webp" alt="" />
      </div>
      <div class="left">
        <span set:html={myProduct.event_long_description} />

        <Button Link="" Text="sign up for event" Type="three" />
      </div>
    </div>
    <img class="img" src="/moodPicture.webp" alt="" />
  </section>

  <style>
    h1 {
      text-align: left;
      color: var(--black);
      font-family: "Helvetica-Neue-LT-Std";
      font-size: 40px;
      font-style: normal;
      font-weight: 900;
      line-height: normal;
    }
    h2 {
      text-align: left;
      color: var(--orange);
      font-family: "Helvetica-Neue-LT-Std";
      font-size: 32px;
      font-style: normal;
      font-weight: 900;
      line-height: normal;
    }
    a {
      text-decoration: none;
      color: var(--orange);
    }
    .img {
      border-radius: 20px;
      aspect-ratio: 1/1;
      object-fit: cover;
      max-height: 428px;
    }
    section {
      max-width: 1034px;
      margin: 0 auto;
    }
    .grid_2-1 {
      display: grid;
      gap: 10px;
      margin-bottom: 20px;
    }
  
    @media (min-width: 801px) {
      .grid_2-1 {
        grid-template-columns: 60% 40%;
      }
    
    .left {
      grid-column: 1/2;
      grid-row: 2/3;
    }
    .right {
      grid-column: 2/3
      grid-row: 2/3;
    }
 
}
  </style>
</Layout>
